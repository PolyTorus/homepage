{
  "name": "homepage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build && npm run serve",
    "build": "npx spago bundle --outfile dist/index.js --minify",
    "start": "npm run serve",
    "serve": "npx http-server . -p 3000 -o",
    "watch": "npx spago bundle --outfile dist/index.js --watch",
    "format": "prettier --write .",
    "postinstall": "lefthook install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "esbuild": "^0.25.8",
    "http-server": "^14.1.1",
    "lefthook": "^1.11.12",
    "prettier": "3.5.2",
    "purescript": "0.15.15",
    "spago": "next"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
