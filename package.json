{
  "name": "polytorus-homepage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run purs:build && npm run purs:serve",
    "build": "npm run purs:build && npm run purs:bundle",
    "start": "npm run purs:serve",
    "purs:build": "spago build",
    "purs:bundle": "mkdir -p dist && npx esbuild output/Main/index.js --bundle --outfile=dist/app.js --format=iife",
    "purs:serve": "npx http-server . -p 3000 -o",
    "purs:watch": "spago build --watch",
    "format": "prettier --write .",
    "postinstall": "lefthook install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "esbuild": "^0.25.8",
    "http-server": "^14.1.1",
    "lefthook": "^1.11.12",
    "prettier": "3.5.2"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
