{
  "name": "polytorus-homepage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run purs:build && npm run purs:serve",
    "build": "npm run purs:build && npm run purs:bundle",
    "start": "npm run purs:serve",
    "purs:build": "npx spago build",
    "purs:bundle": "mkdir -p dist && node build-script.js",
    "purs:serve": "npx http-server . -p 3000 -o",
    "purs:watch": "npx spago build --watch",
    "format": "prettier --write .",
    "postinstall": "lefthook install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "esbuild": "^0.25.8",
    "http-server": "^14.1.1",
    "lefthook": "^1.11.12",
    "prettier": "3.5.2",
    "purescript": "0.15.15",
    "spago": "next"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
